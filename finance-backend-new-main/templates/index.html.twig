{% extends 'base.html.twig' %}

{% block title %}Operation index{% endblock %}

{% block body %}
    <h1>Operation index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Label</th>
                <th>Amount</th>
                <th>Category</th>
                <th>Date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for operation in operations %}
            <tr>
                <td>{{ operation.id }}</td>
                <td>{{ operation.label }}</td>
                <td>{{ operation.amount }}</td>
                <td>{{ operation.category }}</td>
                <td>{{ operation.date ? operation.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app__show', {'id': operation.id}) }}">show</a>
                    <a href="{{ path('app__edit', {'id': operation.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app__new') }}">Create new</a>
{% endblock %}
